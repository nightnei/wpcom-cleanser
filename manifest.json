{
  "manifest_version": 3,
  "name": "WPcom Cleanser",
  "description": "A tool for cleaning up WordPress.com subscriptions and sites.",
  "version": "1.0",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "action": {
    "default_icon": { 
      "16": "/icons/icon16.png",
      "32": "/icons/icon32.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    },
    "default_popup": "index.html",
    "default_title": "WPcom Cleanser"
  },
  "permissions": [
    "cookies",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://public-api.wordpress.com/*"
  ]
}